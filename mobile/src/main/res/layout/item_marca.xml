<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:contentDescription="@string/text_acess_card_marcas_veiculos">

    <include
        layout="@layout/layout_content_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nomeMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:textColor="#000"
                android:textSize="18sp"
                tools:ignore="MissingPrefix"
                tools:text="GM - Chevrolet" />

            <TextView
                android:id="@+id/tipoVeiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:paddingBottom="8dp"
                android:textColor="#555"
                android:theme="@style/PrimaryFlatButton"
                tools:text="Carros e utilitários pequenos" />

            <TextView
                android:id="@+id/tabelaReferencia"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="bottom|right"
                android:textColor="@color/colorPrimaryDark"
                android:theme="@style/PrimaryFlatButton"
                tools:text="Ano referência: 2018" />
        </LinearLayout>

        <ImageView
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="10dp"
            card_view:srcCompat="@color/colorPrimary" />

    </android.support.v7.widget.CardView>
</RelativeLayout>