<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <include
        layout="@layout/layout_content_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardElevation="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/nomeMarca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="GM - Chevrolet"
                android:textColor="#000"
                android:textSize="18sp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tipoVeiculo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:hint="Veículos"
                android:paddingBottom="8dp"
                android:textColor="#555"
                android:theme="@style/PrimaryFlatButton"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/tabelaReferencia"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:gravity="bottom|right"
                android:hint="Ano referência: 2018"
                android:textColor="#555"
                android:theme="@style/PrimaryFlatButton"
                tools:ignore="MissingPrefix" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="5dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="10dp"
            card_view:srcCompat="@color/colorPrimary" />

        <!--
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                fontPath="fonts/gtw.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Compartilhar"
                android:theme="@style/PrimaryFlatButton"
                tools:ignore="MissingPrefix" />

            <Button
                fontPath="fonts/gtw.ttf"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Ver"
                android:theme="@style/PrimaryFlatButton"
                tools:ignore="MissingPrefix" />
        </LinearLayout>
        -->

    </android.support.v7.widget.CardView>
</RelativeLayout>